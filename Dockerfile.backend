# NestJS Backend Dockerfile
FROM node:18-alpine AS builder

WORKDIR /app

# Configure npm for more resilient network installs in CI/Coolify
RUN npm config set fetch-timeout 300000 && \
    npm config set fetch-retries 5 && \
    npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000

# Copy NestJS package files
COPY nest/package*.json ./nest/

WORKDIR /app/nest

# Install dependencies
RUN npm ci --legacy-peer-deps --ignore-engines

# Copy source code
COPY nest/tsconfig.json /app/nest/tsconfig.json
COPY nest/nest-cli.json /app/nest/nest-cli.json
COPY nest/src ./src
COPY prisma /app/prisma

# Generate Prisma client
RUN npx prisma generate --schema=../prisma/schema.prisma

# Build NestJS
RUN npm run build

# Production stage
FROM node:18-alpine

WORKDIR /app

# Configure npm for more resilient network installs in CI/Coolify
RUN npm config set fetch-timeout 300000 && \
    npm config set fetch-retries 5 && \
    npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000

ENV APP_NAME=warungin-backend
ENV APP_VERSION=1.0.0
ENV APP_COMMIT_SHA=unknown

# Install runtime dependencies
RUN apk add --no-cache dumb-init

# Copy package files from builder
COPY nest/package*.json ./nest/

WORKDIR /app/nest

# Install production dependencies
RUN npm ci --omit=dev --legacy-peer-deps --ignore-engines

# Copy built files
COPY --from=builder /app/nest/dist ./dist
COPY --from=builder /app/nest/node_modules/.prisma ./node_modules/.prisma
COPY --from=builder /app/nest/node_modules/@prisma ./node_modules/@prisma
COPY --from=builder /app/prisma ./prisma

# Copy generated Prisma client
RUN mkdir -p src/generated/client && \
    cp -r node_modules/.prisma/client src/generated/client 2>/dev/null || true

# Create logs directory
RUN mkdir -p /app/logs

# Non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs || true

USER nodejs

EXPOSE 3000

ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "dist/main.js"]
