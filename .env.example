# Warungin POS - Production Environment Template
# Copy this file to .env and fill in the values

# Application
NODE_ENV=production
DEBUG=false
PORT=3000
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@postgres:5432/warungin

# JWT - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_SECRET

# CORS - Separate multiple domains with comma
CORS_ORIGIN=https://your-domain.com

# Payment Gateway (Midtrans) - Optional
# MIDTRANS_MERCHANT_ID=
# MIDTRANS_SERVER_KEY=
# MIDTRANS_CLIENT_KEY=
# MIDTRANS_IS_PRODUCTION=false

# Email (SMTP) - Optional
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=

# Monitoring
# GRAFANA_ADMIN_PASSWORD=admin
# SLACK_WEBHOOK_URL=
